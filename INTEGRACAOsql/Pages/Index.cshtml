@page
@model IndexModel
@{
    ViewData["Title"] = @IndexModel.statusConexao;
}

<div class="w-full h-[100dvh] py-16 flex flex-row justify-between">

    <!-- container do console -->

    <div class="w-[49%] h-[50dvh] bg-gray-900 text-white" style="margin: 0 auto">
        <div class="console w-full h-[49dvh]">
            <p class="text-white tracking-widest whitespace-pre-line">@IndexModel.logs</p>
        </div>
        <div class="mb-6 flex flex-row justify-content-between w-full">

            <form method="post" class="w-full flex flex-row justify-between" asp-page-handler="Comandos">
                <input placeholder="Insira comandos SQL aqui" class="w-full border border-gray-600 text-sm rounded-lg bg-gray-800 focus:ring-gray-900 focus:border-gray-900 block p-2.5 placeholder-white text-white" type="text" id="comando" name="comando" required>
                <button class="hover:bg-gray-200 border border-gray-600 rounded-lg text-white bg-gray-800 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center me-2 focus:ring-gray-900 focus:border-gray-900 " style="margin: 0 auto" type="submit">
                      
                  <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                  </svg>  
                  <span class="sr-only">Icon description</span>

                </button>
            </form>

        </div>
    </div>


    <!-- form do login-->
    <div class="w-[49%] h-[50dvh] text-white" style="margin: 0 auto">
        <div class="console bg-gray-900 w-full flex items-center h-[49dvh]">

            <!-- Formulário que envia o login via POST -->

            <form method="post" class="w-[80%] mx-auto" asp-page-handler="Credenciais">
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="server" id="server" class="block py-2.5 px-0 w-full text-sm bg-transparent border-0 border-b-2 border-gray-300 appearance-none text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" required />
                    <label for="server" class="peer-focus:font-medium absolute text-sm text-white duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:scale-75 peer-focus:-translate-y-6">IP do MySQL</label>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="uid" id="uid" class="block py-2.5 px-0 w-full text-sm bg-transparent border-0 border-b-2 border-gray-300 appearance-none text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" required />
                    <label for="uid" class="peer-focus:font-medium absolute text-sm text-white duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:scale-75 peer-focus:-translate-y-6">UID (ex: root)</label>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <input type="password" name="pwd" id="pwd" class="block py-2.5 px-0 w-full text-sm bg-transparent border-0 border-b-2 border-gray-300 appearance-none text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" required />
                    <label for="pwd" class="peer-focus:font-medium absolute text-sm text-white duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:scale-75 peer-focus:-translate-y-6">Senha</label>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="database" id="database" class="block py-2.5 px-0 w-full text-sm bg-transparent border-0 border-b-2 border-gray-300 appearance-none text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" required />
                    <label for="database" class="peer-focus:font-medium absolute text-sm text-white duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:scale-75 peer-focus:-translate-y-6">Database</label>
                </div>
                <button type="submit" class="text-white hover:text-gray-800 bg-gray-800 hover:bg-gray-900 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Login</button>
            </form>


        </div>
    </div>
</div>
